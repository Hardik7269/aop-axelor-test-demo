<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">


	<grid model="com.axelor.sale.db.ProductCategory" title="Poduct categories" name="product-category-grid">
		<field name="iconSelect"/>
		<field name="fullName"/>
		<field name="name"/>
		<field name="code"/>		
	</grid>

	<form model="com.axelor.sale.db.ProductCategory" title="Product category" name="product-category-form" width="large">
		<panel title="mainPanel">	
			<field name="iconSelect" colSpan="6" selection="stock.stock.location.type.select" widget="ImageSelect"/>
			<field name="name" title="Name" colSpan="6"/>
			<field name="code"/>
		</panel>
	</form>
	<!-- tree view   -->
	<tree name="product-category-tree" title="Product category tree">
	
	    <column name="iconSelect" type="integer" widget="ImageSelect"/>
	    <column name="code" type="string"/>
	    <column name="name" type="string"/>
	
	    <node model="com.axelor.sale.db.ProductCategory">
	      <field name="iconSelect" as="iconSelect"/>
	      <field name="name" as="name"/>
	      <field name="code" as="code"/>
	    </node>
	
	    <node model="com.axelor.sale.db.Product" parent="productCategoryList" draggable="true">
	      <field name="name" as="name"/>
	      <field name="code" as="code"/>
	    </node>

  	</tree>
	
  <selection name="stock.stock.location.type.select">
    <option value="0" icon="img/productCategory/storable.png">Prestation</option>
    <option value="1" icon="img/productCategory/service.png">Product</option>
  </selection>

</object-views>
