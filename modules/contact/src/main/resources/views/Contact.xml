<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">

    <grid name="contact-grid" title="Contacts" model="com.axelor.contact.db.Contact">

        <field name="fullName"/>
        <field name="birthDate"/>
        <field name="email" />
        <field name="phone" />
        <field name="isSubjectToTaxes" />
        <field name="address" />
        <field name="Archived" />

    </grid>
	
	<form model="com.axelor.contact.db.Contact" title="Contact" name="contact-form" width="large">
		<panel title="Profile">
			<panel colSpan="3">
				<field name="image" widget="image" />
			</panel>
			<panel colSpan="9" >
				<field name="firstName"/>
				<field name="lastName"/>
				<field name="title"/>
				<field name="birthDate" />
				
			</panel>
		</panel>
		
		<panel-tabs>
			<panel title="Contact">
				<field name="email" colSpan="3" />
				<field name="phone" colSpan="3" widget="phone"/>
				<field name="address"/>
			</panel>
			<panel title="Other informations">
				<field name="isSubjectToTaxes" widget="boolean-switch"/>
				<field name="familyContactSet" widget="ref text"/>
			</panel>
		</panel-tabs>
		<panel-dashlet action="action.sale.data.view.sale.order.line.contact" />
		
		<panel-mail>
			<mail-messages limit="5"/>
			<mail-followers/>
		</panel-mail>

	</form>

</object-views>