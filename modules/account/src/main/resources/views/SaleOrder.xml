<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">
	<grid model="com.axelor.sale.db.SaleOrder" title="Sale order lines" name="sale-order-grid" extension="true">
		<extend target="//field[@name='confirmationDateT']">
			<insert position="after">
				<field name="estimatedInvoiceDate"/>
			</insert>
		</extend>
	</grid>
	
	<form model="com.axelor.sale.db.SaleOrder" title="Sale Order" name="sale-order-form" extension="true">
		<extend target="//field[@name='quotationDateT']">
			<attribute name="readonly" value="true"/>
		</extend>
		<extend target="//field[@name='confirmationDateT']">
			<attribute name="readonly" value="true"/>
		</extend>
	</form>
	
	
  </object-views>