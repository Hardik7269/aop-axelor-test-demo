<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">
  
  <grid model="com.axelor.invoice.db.InvoiceLine" title="Invoices lines" name="invoice-line-grid">
  	<field name="description"/>
  	<field name="quantity"/>
  	<field name="exTaxTotal"/>
  	<field name="inTaxTotal"/>
  	<field name="taxRate"/>
  	<field name="unitPriceUntaxed"/>
  	<field name="product"/>
  </grid>
  
  <form model="com.axelor.invoice.db.InvoiceLine" title="Invoice line" name="invoice-line-form" onNew="action-invoice-line-set-tax-rate">
	<panel title="Overview" colSpan="6">
		<field name="product" onChange="action-invoice-line-form-on-change-product"/>
		<field name="description"/>
		
		<field name="unitPriceUntaxed" onChange="action-invoice-line-form-on-change-record"/>
		<field name="quantity" onChange="action-invoice-line-form-on-change-record"/>
		
		<field name="taxRate"/>
		<field name="inTaxTotal"/>
	</panel>
  </form>
  
  <action-method name="action-invoice-line-set-tax-rate">
  	<call class="com.axelor.invoice.web.InvoiceLineController" method="setTaxRate"/>
  </action-method>
  
   <action-method name="action-invoice-line-form-on-change-product">
  	<call class="com.axelor.invoice.web.InvoiceLineController" method=""/>
  </action-method>
			
</object-views>
